{% extends 'base.html.twig' %}

{% block javascripts %}
    <script src="{{ asset('build/datepicker.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="row mt-3 mb-5 shadow">
        <div class="col-12">
            <h1 class="text-center mt-3">Gestion de l'édition: {{ edition.name }}</h1>
            <h2 class="text-center mb-5">de l'événement: {{ edition.event.title }}</h2>
        </div>
        <div class="col-md-6">
            <h3 class="mb-3">Informations :</h3>

            {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
            <div class="text-center">
                <button class="btn btn-primary mb-3" type="submit"><i class="far fa-save"></i> Enregister les modifications</button>
            </div>
            {{ form_end(edit_form) }}


            <a class="btn btn-dark text-center float-left" href="{{ path('edition_index') }}"><i class="fas fa-chevron-left"></i> Retour à la liste des éditions</a>
            {{ form_start(delete_form) }}
            <button class="btn btn-danger float-right confirm-alert" type="submit"><i class="far fa-trash-alt"></i> Supprimer l'édition</button>
            {{ form_end(delete_form) }}

        </div>

        <div class="col-md-6">
            <h3 class="mb-3">Publier une nouvelle :</h3>
            {{ form_start(notification_form) }}
            {{ form_row(notification_form.content, {'label' : '250 caractères maximum :', 'attr' : {'rows' : '4', 'maxlength' : '250'}}) }}
            <div class="text-center">
            <button type="submit"  class="btn btn-primary">Publier   <i class="far fa-paper-plane"></i></button>
            </div>
            {{ form_end(notification_form) }}
        </div>

    </div>
{% endblock %}
