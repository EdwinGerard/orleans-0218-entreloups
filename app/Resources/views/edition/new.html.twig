{% extends 'base.html.twig' %}
{% block title %}Créer une nouvelle édition{% endblock %}
{% block javascripts %}
    <script src="{{ asset('build/datepicker.js') }}"></script>
{% endblock %}


{% block body %}
    <div class="row my-5">
        <div class="offset-3 col-md-6 mx-auto shadow">
            <h1 class="text-center mt-3">Créer une nouvelle édition</h1>

            {{ form_start(form) }}

                {{ form_row(form.name) }}

                {{ form_row(form.startDate) }}

                {{ form_row(form.endDate) }}

                {{ form_row(form.place) }}

                {{ form_label(form.hashtag) }}
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">#</span>
                    </div>
                    {{ form_widget(form.hashtag) }}
                </div>

                {{ form_errors(form.hashtag) }}

                {{ form_row(form.status) }}

                {{ form_row(form.event) }}
            <div class="form-group">
                <a role="button" class="btn btn-dark" href="{{ path('event_edit', {'slug' : event.slug}) }}">
                    <i class="fas fa-chevron-left"></i> Retourner à l'évènement
                </a>
                <button class="btn btn-primary float-right" type="submit"><i class="fas fa-plus"></i> Créer</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
