{% extends 'base.html.twig' %}
{% block title %}Modification d'une nouvelle{% endblock %}
{% block body %}
    <div class="row my-5">
        <div class="offset-3 col-md-6 mx-auto shadow">
            <h1 class="text-center mt-3">Modification d'une nouvelle pour: {{ notification.edition.event.title }} {{ notification.edition.name }}</h1>
            <div class="form-group">
                {{ form_start(edit_form) }}
                {{ form_label(edit_form.content, '250 caract√®res maximum :') }}
                {{ form_widget(edit_form.content, { 'attr': {'rows' : '4', 'maxlength' : '250'} }) }}
                {{ form_errors(edit_form.content) }}
            </div>
            <div class="form-group">
                <button class="btn btn-primary my-2 float-right" type="submit"><i class="far fa-save"></i> Modifier</button>
            </div>
            {{ form_end(edit_form) }}
            {{ form_start(delete_form) }}
            <div class="form-group">
                <button class="btn btn-danger my-2 float-left confirm-alert" type="submit"><i class="far fa-trash-alt"></i> Supprimer</button>
            </div>
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
