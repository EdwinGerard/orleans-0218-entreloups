{% extends 'base.html.twig' %}

{% block title %}entrenous.com{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/home.css') }}">
    <link rel="stylesheet" href="{{ asset('build/event.css') }}">
{% endblock %}

{% block banner %}
    <div class="container-fluid">
        <div id="container" class="welcome">
            <h1 class="title">Welcome</h1>
        </div>
        <img class="backgrd" alt="" src="{{ asset('build/images/accueil.194f2205.jpeg') }}">
    </div>
{% endblock %}

{% block body %}
    <div class="searchBar shadow p-3 mx-auto col-9 col-md-6">
        <h2 class="text-center">Recherche d'évènement</h2>
        {{ form_start(form) }}
        <div class="form-inline justify-content-center pb-2">
            {{ form_widget(form) }}
            <button type="submit" id="search" class="btn btn-primary ml-1">
                <i class="fas fa-search"></i> Rechercher
            </button>
        </div>
        {{ form_end(form) }}
    </div>
    <div id="events" class="row">
        {% include 'event/events.html.twig' %}
    </div>
{% endblock %}
