{% trans_default_domain 'FOSUserBundle' %}
<div class="row justify-content-center my-5">
    <div class="col-6 shadow">
        <h1 class="text-center">Modifier mon mot de passe</h1>
        <div class="offset-2 col-8">
            {{ form_start(form, { 'action': path('fos_user_change_password'),
                                  'attr': { 'class': 'fos_user_change_password' } }) }}
            <div class="form-group">
                <label for="app_user_change_password_current_password">Mot de passe actuel :</label>
                {{ form_widget(form.current_password) }}
            </div>
            <div class="form-group">
                <label for="app_user_change_password_new_password">Nouveau mot de passe :</label>
                {{ form_widget(form.plainPassword.first) }}
            </div>
            <div class="form-group">
                <label for="app_user_change_password_password_confirmation">Confirmation nouveau mot de passe :</label>
                {{ form_widget(form.plainPassword.second) }}
            </div>
            <div class="form-group">
                <a class="btn btn-dark" href="/profile/edit"><i class="fas fa-chevron-left"></i> Retour</a>
                <button type="submit" class="btn btn-primary float-right">
                    <i class="fas fa-pencil-alt"></i> Modifier
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
