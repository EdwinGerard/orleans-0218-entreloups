{% block body %}

{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

<div class="row my-5">
    <div class="offset-3 col-md-6 mx-auto shadow">
        <h1 class="text-center mt-3">Création de votre compte</h1>
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
        <div class="form-group">
            <label for="app_user_registration_email">Adresse e-mail :</label>
            {{ form_widget(form.email) }}
        </div>
        <div class="form-group">
            <label for="app_user_registration_username">Nom d'utilisateur :</label>
        {{ form_widget(form.username) }}
        </div>
        <div class="form-group">
            <label for="app_user_registration_plainpassword_first">Mot de passe :</label>
        {{ form_widget(form.plainPassword.first) }}
        </div>
        <div class="form-group">
            <label for="app_user_registration_plainpassword_second">Confirmation mot de passe :</label>
        {{ form_widget(form.plainPassword.second) }}
        </div>
        <div class="form-group">
            <label for="app_user_registration_lastName">Nom :</label>
        {{ form_widget(form.lastName) }}
        </div>
        <div class="form-group">
            <label for="app_user_registration_firstName">Prénom :</label>
        {{ form_widget(form.firstName) }}
        </div>
        <div class="form-group">
            <label for="app_user_registration_location">Ville :</label>
        {{ form_widget(form.location) }}
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary mx-auto"><i class='far fa-save'></i> Enregistrer</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>

{% endblock body %}

